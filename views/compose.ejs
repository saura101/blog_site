<%- include("partials/header.ejs") %>
<% if(locals.error) {%>
  <div ><p class="err"><%= error %></p></div>
<% } %>
<% if(locals.title) {%>
<h1><%= title %></h1>
<% } else { %>
<h1>Compose</h1>
<% } %>
<% if(!locals.title) {%>
  <form action="/compose" method="post" class="" enctype="multipart/form-data">
    <div class="form-group">
      <label for="blogtitle">Title</label>
      <% if(locals.post) {%>
        <input type="text" name="blogtitle" class="form-control" value="<%= post.name %>">
      <% } else { %>
        <input type="text" name="blogtitle" class="form-control">
      <% } %>
    </div>
    <div class="form-group">
      <label for="blog">Post</label>
      <% if(locals.post) {%>
        <textarea name="blog" id="" cols="" rows="8" class="form-control"><%= post.content %></textarea>
      <% } else { %>
        <textarea name="blog" id="" cols="" rows="8" class="form-control"></textarea>
        <% } %>
      <label for="blogtitle">Author</label>
      <% if(locals.post) {%>
        <input type="text" name="author" class="form-control" value="<%= post.author %>">
      <% } else { %>
        <input type="text" name="author" class="form-control">
      <% } %>
      <label for="image">Image</label>
      <input type="file" name="image" accept=".jpg, .png, .jpeg">
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
  </form>
<% } else {%>
  <form action="/update/<%= post._id%>" method="post" class="" enctype="multipart/form-data">
    <div class="form-group">
      <label for="blogtitle">Title</label>
      <input type="text" name="blogtitle" class="form-control" value="<%= post.name %>">
    </div>
    <div class="form-group">
      <label for="blog">Post</label>
      <textarea name="blog" id="" cols="" rows="8" class="form-control" ><%= post.content %></textarea>
      <label for="blogtitle">Author</label>
      <input type="text" name="author" class="form-control" value="<%= post.author %>">
      <label for="image">Image</label>
      <input type="file" name="image" accept=".jpg, .png, .jpeg" >
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
  </form>
<% } %>


<%- include("partials/footer.ejs") %>
